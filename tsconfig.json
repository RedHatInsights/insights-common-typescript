{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "removeComments": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "include":[
    "src/**/*",
    "./global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/__mocks__"
  ]
}
